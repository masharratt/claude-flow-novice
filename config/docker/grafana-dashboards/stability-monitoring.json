{
  "dashboard": {
    "id": null,
    "uid": "stability-test",
    "title": "8-Hour Stability Test - 50 Agents",
    "tags": ["stability", "performance", "agents"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "type": "graph",
        "title": "Memory Usage (RSS)",
        "targets": [
          {
            "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
            "legendFormat": "Used Memory",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "Memory"
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 2,
        "legend": {
          "show": true,
          "values": true,
          "min": true,
          "max": true,
          "current": true,
          "avg": true
        },
        "tooltip": {
          "shared": true,
          "sort": 0,
          "value_type": "individual"
        }
      },
      {
        "id": 2,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "type": "graph",
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "CPU",
            "max": 100,
            "min": 0
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "min": true,
          "max": true,
          "current": true,
          "avg": true
        }
      },
      {
        "id": 3,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "type": "graph",
        "title": "File Descriptors",
        "targets": [
          {
            "expr": "process_open_fds",
            "legendFormat": "Open FDs",
            "refId": "A"
          },
          {
            "expr": "process_max_fds",
            "legendFormat": "Max FDs",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Count"
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 0,
        "linewidth": 2,
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [10000],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "name": "File Descriptor Alert"
        }
      },
      {
        "id": 4,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "type": "graph",
        "title": "Process Count",
        "targets": [
          {
            "expr": "count(up)",
            "legendFormat": "Active Processes",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Processes"
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 5,
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 16 },
        "type": "singlestat",
        "title": "Test Duration",
        "targets": [
          {
            "expr": "time() - process_start_time_seconds",
            "refId": "A"
          }
        ],
        "format": "s",
        "valueName": "current",
        "colorBackground": false,
        "colorValue": false,
        "thresholds": "",
        "sparkline": {
          "show": false
        }
      },
      {
        "id": 6,
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 16 },
        "type": "singlestat",
        "title": "Memory Growth %",
        "targets": [
          {
            "expr": "((node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / (node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes offset 1h) - 1) * 100",
            "refId": "A"
          }
        ],
        "format": "percent",
        "valueName": "current",
        "colorBackground": true,
        "colorValue": false,
        "thresholds": "3,5",
        "colors": ["#299c46", "#e0b400", "#d44a3a"]
      },
      {
        "id": 7,
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 16 },
        "type": "singlestat",
        "title": "Avg CPU %",
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "refId": "A"
          }
        ],
        "format": "percent",
        "valueName": "avg",
        "colorBackground": true,
        "colorValue": false,
        "thresholds": "70,85",
        "colors": ["#299c46", "#e0b400", "#d44a3a"]
      },
      {
        "id": 8,
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 16 },
        "type": "singlestat",
        "title": "FD Usage %",
        "targets": [
          {
            "expr": "(process_open_fds / process_max_fds) * 100",
            "refId": "A"
          }
        ],
        "format": "percent",
        "valueName": "current",
        "colorBackground": true,
        "colorValue": false,
        "thresholds": "60,80",
        "colors": ["#299c46", "#e0b400", "#d44a3a"]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}
