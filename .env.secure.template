# Claude Flow Novice - Secure Environment Configuration
# SECURITY: This file should have permissions 600 (-rw-------)
# DO NOT commit this file to version control

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================

# Anthropic Claude API Key (Primary)
# Format: sk-ant-api03-[95 characters]
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Z.ai API Key (Agent Orchestration)
# Format: 32-char-hex.16-char-alphanumeric
Z_AI_API_KEY=your-zai-api-key-here
ZAI_API_KEY=your-zai-api-key-here

# NPM Registry API Key (Publishing)
# Format: npm_[36 characters]
NPM_API_KEY=your-npm-api-key-here

# =============================================================================
# REDIS AUTHENTICATION (REQUIRED FOR PRODUCTION)
# =============================================================================

# Redis Password (minimum 32 characters)
# Auto-generated if not provided - see memory/security/redis-password.txt
REDIS_PASSWORD=your-secure-redis-password-minimum-32-characters

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TLS_ENABLED=false

# =============================================================================
# CLAUDE AGENT SDK CONFIGURATION
# =============================================================================

# SDK Feature Flags
ENABLE_SDK_INTEGRATION=true
SDK_INTEGRATION_MODE=full
ENABLE_SDK_CACHING=true
ENABLE_CONTEXT_EDITING=true
ENABLE_SELF_VALIDATION=true

# SDK Performance Tuning
SDK_CONFIDENCE_THRESHOLD=0.75
SDK_MAX_RETRIES=3
SDK_MINIMUM_COVERAGE=80
SDK_DEBUG=false
SDK_LOG_LEVEL=info
ENABLE_SDK_MONITORING=true

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================

# Options: development, staging, production
NODE_ENV=development

# =============================================================================
# AGENT COORDINATION CONFIGURATION
# =============================================================================

# Agent limits
CFN_MAX_AGENTS=10
CFN_SHARD_COUNT=4

# Monitoring
CFN_METRICS_ENABLED=true
CFN_ALERTING_ENABLED=false
CFN_LOG_LEVEL=debug

# Consensus
CFN_CONSENSUS_THRESHOLD=0.90
CFN_ALERT_COORD_TIME_MS=3000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Authentication
CFN_ENABLE_AGENT_AUTH=false
CFN_ENABLE_TLS=false
CFN_ENABLE_RATE_LIMITING=false
CFN_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Envelope Encryption Master Key (REQUIRED FOR DATA ENCRYPTION)
# Generate with: openssl rand -base64 32
# SECURITY: Never commit this key to version control
# Rotate every 90 days
MASTER_ENCRYPTION_KEY=your-base64-encoded-master-key-32-bytes-minimum

# =============================================================================
# DASHBOARD AUTHENTICATION (REQUIRED FOR PRODUCTION)
# =============================================================================

# Dashboard Admin Credentials
# Generate password hash with: node -e "require('bcrypt').hash('your-password', 12).then(console.log)"
DASHBOARD_ADMIN_USER=admin
DASHBOARD_ADMIN_PASS_HASH=your-bcrypt-hashed-password-here

# Dashboard Monitor User Credentials
DASHBOARD_MONITOR_USER=monitor
DASHBOARD_MONITOR_PASS_HASH=your-bcrypt-hashed-password-here

# Dashboard Fleet Manager Credentials
DASHBOARD_FLEET_USER=fleet
DASHBOARD_FLEET_PASS_HASH=your-bcrypt-hashed-password-here

# Session Configuration
DASHBOARD_SESSION_SECRET=your-random-session-secret-minimum-32-characters
DASHBOARD_SESSION_TIMEOUT_HOURS=24

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# AWS Secrets Manager (Optional)
# AWS_REGION=us-east-1
# AWS_SECRET_NAME=claude-flow-secrets
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# GitHub Integration (Optional)
# CFN_GITHUB_ENABLED=false
# CFN_GITHUB_TOKEN=your-github-token
# CFN_GITHUB_REPO=your-org/your-repo

# Database (Optional)
# CFN_DB_ENABLED=false
# CFN_DB_TYPE=sqlite
# CFN_DB_PATH=/var/lib/cfn/metrics.db

# =============================================================================
# SECURITY NOTES
# =============================================================================
#
# 1. File Permissions:
#    chmod 600 .env
#
# 2. Never commit .env to version control
#
# 3. Rotate API keys every 90 days:
#    node scripts/rotate-api-keys.js
#
# 4. Use strong Redis passwords (32+ characters)
#
# 5. Enable TLS in production:
#    CFN_ENABLE_TLS=true
#
# 6. Consider using AWS Secrets Manager for production
#
# =============================================================================
