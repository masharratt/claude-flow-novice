{
  "namespace_isolation_strategy": {
    "isolation_model": "hierarchical_namespace",
    "security_model": "role_based_access_control",
    "data_separation": "physical_and_logical"
  },
  "namespace_configuration": {
    "prefix_pattern": "{environment}_{swarm_id}_{component}",
    "separator": "_",
    "max_namespace_length": 64,
    "allowed_characters": "a-z0-9_",
    "reserved_prefixes": ["system", "admin", "coord", "monitor"]
  },
  "swarm_namespaces": {
    "production": {
      "namespace_prefix": "prod",
      "database_file": "multi_swarm_prod.db",
      "table_prefix": "prod_",
      "isolation_level": "strict",
      "cross_swarm_access": "none",
      "encryption_enabled": true,
      "audit_logging": true,
      "backup_isolation": true
    },
    "development": {
      "namespace_prefix": "dev",
      "database_file": "multi_swarm_dev.db",
      "table_prefix": "dev_",
      "isolation_level": "moderate",
      "cross_swarm_access": "read_only_staging",
      "encryption_enabled": false,
      "audit_logging": true,
      "backup_isolation": true
    },
    "testing": {
      "namespace_prefix": "test",
      "database_file": "multi_swarm_test.db",
      "table_prefix": "test_",
      "isolation_level": "moderate",
      "cross_swarm_access": "read_dev_write_staging",
      "encryption_enabled": false,
      "audit_logging": false,
      "backup_isolation": false
    },
    "research": {
      "namespace_prefix": "research",
      "database_file": "multi_swarm_research.db",
      "table_prefix": "research_",
      "isolation_level": "loose",
      "cross_swarm_access": "read_all_non_prod",
      "encryption_enabled": false,
      "audit_logging": true,
      "backup_isolation": true
    },
    "staging": {
      "namespace_prefix": "staging",
      "database_file": "multi_swarm_staging.db",
      "table_prefix": "staging_",
      "isolation_level": "strict",
      "cross_swarm_access": "read_only_dev",
      "encryption_enabled": true,
      "audit_logging": true,
      "backup_isolation": true
    }
  },
  "security_boundaries": {
    "authentication": {
      "swarm_api_keys": true,
      "agent_certificates": true,
      "session_tokens": true,
      "token_expiry_hours": 24
    },
    "authorization": {
      "role_based_permissions": {
        "swarm_admin": ["read", "write", "delete", "admin"],
        "swarm_agent": ["read", "write"],
        "swarm_monitor": ["read"],
        "cross_swarm_coordinator": ["read", "coordinate"],
        "system_admin": ["all"]
      },
      "resource_permissions": {
        "own_namespace": "full_access",
        "coordination_namespace": "limited_access",
        "other_namespaces": "no_access_unless_granted"
      }
    },
    "data_protection": {
      "encryption_at_rest": {
        "production": "AES-256",
        "staging": "AES-256",
        "development": "none",
        "testing": "none",
        "research": "none"
      },
      "encryption_in_transit": "TLS_1.3",
      "key_rotation_days": 90,
      "backup_encryption": true
    }
  },
  "cross_namespace_coordination": {
    "coordination_namespace": "coord_shared",
    "allowed_operations": [
      "task_handoff",
      "data_synchronization",
      "resource_sharing",
      "status_notification",
      "performance_metrics_sharing"
    ],
    "coordination_protocols": {
      "task_handoff": {
        "requires_approval": true,
        "approval_timeout_seconds": 300,
        "auto_approve_environments": ["dev", "test"]
      },
      "data_sync": {
        "allowed_directions": {
          "dev_to_test": true,
          "test_to_staging": true,
          "staging_to_prod": false,
          "research_to_any": false,
          "any_to_research": true
        },
        "sync_frequency_minutes": 15,
        "conflict_resolution": "source_wins"
      }
    }
  },
  "monitoring_and_auditing": {
    "audit_events": [
      "namespace_access",
      "cross_swarm_operation",
      "permission_grant",
      "permission_deny",
      "data_export",
      "schema_modification"
    ],
    "audit_retention_days": 90,
    "audit_compression": true,
    "real_time_alerting": {
      "unauthorized_access": true,
      "permission_escalation": true,
      "data_exfiltration": true,
      "schema_tampering": true
    }
  },
  "disaster_recovery": {
    "backup_strategy": "per_namespace",
    "backup_frequency": {
      "production": "every_5_minutes",
      "staging": "every_20_minutes",
      "development": "every_15_minutes",
      "testing": "every_30_minutes",
      "research": "hourly"
    },
    "cross_region_replication": {
      "production": true,
      "staging": true,
      "development": false,
      "testing": false,
      "research": false
    },
    "recovery_time_objectives": {
      "production": "15_minutes",
      "staging": "30_minutes",
      "development": "2_hours",
      "testing": "4_hours",
      "research": "24_hours"
    }
  }
}