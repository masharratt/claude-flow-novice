{
  "server": {
    "host": "localhost",
    "port": 3000,
    "environment": "development",
    "cluster": false
  },
  "mcp": {
    "claudeFlow": {
      "enabled": true,
      "command": "npx",
      "args": ["claude-flow@alpha"],
      "timeout": 30000,
      "retryAttempts": 3,
      "retryDelay": 1000
    },
    "ruvSwarm": {
      "enabled": true,
      "command": "npx",
      "args": ["ruv-swarm"],
      "timeout": 30000,
      "retryAttempts": 3,
      "retryDelay": 1000
    },
    "flowNexus": {
      "enabled": false,
      "command": "npx",
      "args": ["flow-nexus@latest"]
    },
    "playwrightMcp": {
      "enabled": true,
      "command": "npx",
      "args": ["@modelcontextprotocol/server-playwright@latest"],
      "timeout": 30000,
      "retryAttempts": 3,
      "retryDelay": 1000,
      "env": {
        "PLAYWRIGHT_HEADLESS": "true",
        "PLAYWRIGHT_TIMEOUT": "30000"
      }
    }
  },
  "websocket": {
    "enabled": true,
    "path": "/socket.io",
    "updateInterval": 5000,
    "maxConnections": 100,
    "pingTimeout": 60000,
    "pingInterval": 25000
  },
  "database": {
    "type": "sqlite",
    "connection": {
      "filename": ".swarm/portal.db"
    },
    "migrations": {
      "directory": "migrations",
      "tableName": "migrations"
    }
  },
  "security": {
    "rateLimit": {
      "windowMs": 900000,
      "maxRequests": 100,
      "skipSuccessfulRequests": false
    }
  },
  "frontend": {
    "enabled": true,
    "buildPath": "src/web/frontend/build",
    "staticPath": "src/web/frontend/build",
    "indexFile": "index.html",
    "devServer": {
      "port": 3001,
      "proxy": true
    }
  },
  "cors": {
    "enabled": true,
    "allowedOrigins": ["http://localhost:3000", "http://localhost:3001"],
    "allowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "allowedHeaders": ["Content-Type", "Authorization", "X-Requested-With"],
    "credentials": true,
    "maxAge": 86400
  },
  "logging": {
    "level": "info",
    "format": "json",
    "outputs": ["console"],
    "files": {
      "error": "logs/error.log",
      "combined": "logs/combined.log",
      "maxSize": "20m",
      "maxFiles": 14
    }
  },
  "monitoring": {
    "metrics": {
      "enabled": true,
      "interval": 30000,
      "retention": 86400000
    },
    "health": {
      "enabled": true,
      "endpoint": "/api/health",
      "checks": ["database", "mcp", "memory", "disk"]
    },
    "profiling": {
      "enabled": false,
      "interval": 60000
    }
  }
}