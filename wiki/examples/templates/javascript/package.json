{
  "name": "claude-flow-javascript-template",
  "version": "1.0.0",
  "description": "Modern JavaScript/Node.js template for claude-flow development",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "build": "esbuild src/index.js --bundle --platform=node --outfile=dist/bundle.js",
    "claude-flow:init": "npx claude-flow@alpha init --type javascript",
    "claude-flow:agents": "npx claude-flow@alpha agent list",
    "claude-flow:swarm": "npx claude-flow@alpha swarm init mesh --max-agents 5"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "esbuild": "^0.19.5",
    "@types/jest": "^29.5.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "claude-flow",
    "javascript",
    "nodejs",
    "template",
    "ai-agents",
    "automation"
  ],
  "author": "Claude Flow Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruvnet/claude-flow-novice"
  },
  "bugs": {
    "url": "https://github.com/ruvnet/claude-flow-novice/issues"
  },
  "homepage": "https://github.com/ruvnet/claude-flow-novice#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "no-undef": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "claudeFlow": {
    "version": "2.0.0",
    "template": "javascript",
    "agents": {
      "recommended": [
        "coder",
        "tester",
        "reviewer"
      ],
      "advanced": [
        "backend-dev",
        "performance-optimizer",
        "security-manager"
      ]
    },
    "workflows": {
      "development": [
        "sparc",
        "tdd",
        "review"
      ]
    }
  }
}