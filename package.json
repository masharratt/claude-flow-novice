{
  "name": "claude-flow-novice",
  "version": "1.0.0",
  "description": "Simplified Claude Flow for beginners - AI agent orchestration made easy",
  "main": "src/index.js",
  "bin": {
    "claude-flow-novice": "bin/claude-flow-novice.js"
  },
  "scripts": {
    "dev": "tsx src/cli/main.ts",
    "build": "npm run clean && npm run build:esm",
    "clean": "rm -rf dist",
    "build:esm": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "jest --bail --maxWorkers=1",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "start": "node dist/cli/main.js"
  },
  "keywords": [
    "claude",
    "ai",
    "agent",
    "orchestration",
    "beginner",
    "novice",
    "automation",
    "workflow",
    "simple",
    "easy"
  ],
  "author": "Novice Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/masharratt/claude-flow-novice.git"
  },
  "bugs": {
    "url": "https://github.com/masharratt/claude-flow-novice/issues"
  },
  "homepage": "https://github.com/masharratt/claude-flow-novice#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "type": "module"
}