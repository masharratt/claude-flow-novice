{
  "dashboard": {
    "id": null,
    "uid": "blocking-coordination",
    "title": "Blocking Coordination - Production Monitoring",
    "tags": ["blocking-coordination", "cfn-loop", "prometheus"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Active Blocking Coordinators",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(blocking_coordinators_total)",
            "refId": "A",
            "legendFormat": "Active Coordinators"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Blocking Duration (P95 / P99)",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 8,
          "y": 0
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(blocking_duration_seconds_bucket[5m])) by (le, status))",
            "refId": "A",
            "legendFormat": "P95 - {{status}}"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(blocking_duration_seconds_bucket[5m])) by (le, status))",
            "refId": "B",
            "legendFormat": "P99 - {{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "showPoints": "never"
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["mean", "max"]
          }
        }
      },
      {
        "id": 3,
        "title": "Signal Delivery Latency (P50 / P95 / P99)",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(signal_delivery_latency_seconds_bucket[5m])) by (le, signal_type))",
            "refId": "A",
            "legendFormat": "P50 - {{signal_type}}"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(signal_delivery_latency_seconds_bucket[5m])) by (le, signal_type))",
            "refId": "B",
            "legendFormat": "P95 - {{signal_type}}"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(signal_delivery_latency_seconds_bucket[5m])) by (le, signal_type))",
            "refId": "C",
            "legendFormat": "P99 - {{signal_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["mean", "max"]
          }
        }
      },
      {
        "id": 4,
        "title": "Heartbeat Failures Rate",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(rate(heartbeat_failures_total[5m])) by (failure_type)",
            "refId": "A",
            "legendFormat": "{{failure_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["mean", "max"]
          }
        }
      },
      {
        "id": 5,
        "title": "Timeout Events Rate",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "sum(rate(timeout_events_total[5m])) by (timeout_type)",
            "refId": "A",
            "legendFormat": "{{timeout_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["mean", "max"]
          }
        }
      },
      {
        "id": 6,
        "title": "Coordinators by Status",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "sum(blocking_coordinators_total) by (status)",
            "refId": "A",
            "legendFormat": "{{status}}"
          }
        ],
        "options": {
          "displayLabels": ["name", "percent"],
          "pieType": "donut",
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\".*Blocking.*\"}",
          "name": "Blocking Coordination Alerts",
          "step": "60s",
          "tagKeys": "alertname,severity",
          "textFormat": "{{alertname}}: {{summary}}",
          "titleFormat": "Alert"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "swarm_id",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(blocking_coordinators_total, swarm_id)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "coordinator_id",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(blocking_coordinators_total{swarm_id=~\"$swarm_id\"}, coordinator_id)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    }
  }
}
